#if SERVER
// rework here, we pass an array<SyncedMelee> is enough
//SyncedMelee ornull function PickRandomExecution( SyncedMeleeChooser actions, entity attacker )
SyncedMelee ornull function PickRandomExecution( array<SyncedMelee> syncedMelees, entity attacker, bool ignorePickDisabling = false )
{
	array<SyncedMelee> possibleExecutions = []

	//SyncedMelee neckSnap
	SyncedMelee ornull neckSnap // neckSnap can be null!!!
	string lastExecution = attacker.IsPlayer() ? attacker.p.lastExecutionUsed : GetNPCLastUsedExecution( attacker )
	
	// rework here, we pass an array<SyncedMelee> is enough
	//foreach ( action in actions.syncedMelees )
	foreach ( action in syncedMelees )
	{
		if ( action.ref == "execution_neck_snap" )
			neckSnap = action

		// execution_random is a place holder
		if ( action.ref == "execution_random"  )
			continue

		// player may have some executions locked
		// modified: we can make a setting for modified executions, make them able to ignore unlocking progress
		if ( attacker.IsPlayer() && !action.ignoreUnlockProgressChecks && IsItemLocked( attacker, action.ref ) )
			continue

		// if we have more than 1 execution to choose, don't repeatly using a same execution
		if ( syncedMelees.len() > 1 && action.ref == lastExecution )
			continue

		// modified element in struct SyncedMelee. we can decide whether to pick this execution
		if ( !ignorePickDisabling && !action.canBePickedByRandomExecution )
			continue
		
		// all checks passed
		possibleExecutions.append( action )
	}

	if ( possibleExecutions.len() == 0 )
		return neckSnap

	possibleExecutions.randomize()

	// debug
	//print( "chosen random execution: " + possibleExecutions[0].ref )
	
	return possibleExecutions[0]
}

